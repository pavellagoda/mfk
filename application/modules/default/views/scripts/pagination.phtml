	<div class="pagination">
		<div><!-- First page link --> 
			<?php if (isset($this->previous)): ?> <a  class="page-class"
							href="<?php echo $this->url(array('page' => $this->first)); ?>">Start</a> | <?php else: ?>
					<span class="disabled page-class">Start</span> | <?php endif; ?> <!-- Previous page link -->
		
			<?php if (isset($this->previous)): ?> <a  class="page-class"
				href="<?php echo $this->url(array('page' => $this->previous)); ?>">&lt;
